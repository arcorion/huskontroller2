#:import Clock kivy.clock.Clock
#:import threading threading
#:import partial functools.partial
<Touchpanel>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: self.get_background()
    orientation: 'vertical'
    padding: [5, 5, 5, 5]
    #TopBar:
    #    background_color: 'black'
    #    id: topbar
    #    size_hint: 1, 10
    #    text: 'topbar'
    Desktop:
        padding: [5, 5, 5, 5]
        orientation: 'horizontal'
        size_hint: 1, 90
        PowerInput:
            size_hint: 45, 1
            orientation: 'vertical'
            PowerButtonContainer:
                padding: [10, 0]
                size_hint: 1, 15
                spacing: 5            
                PowerButton:
                    id: power
                    text: 'Projector'
                    state: 'down' if app.projector.power_state == True else 'normal'
                    on_state: self.start_projector() if (self.state == "down") else app.controller.turn_off_projector()
                    # on_state: app.PowerOnPopup() if (self.state == "down") else app.controller.turn_off_projector()
            InputButtons:
                cols: 2
                padding: [10]
                rows: 2
                size_hint: 1, 85
                spacing: 5
                InputButton:
                    group: 'input_buttons'
                    id: podium
                    text: 'Podium'
                    state: 'down' if app.input.input == 0 else 'normal'
                    on_state: app.input.set_podium() if (self.state == "down") else print()
                InputButton:
                    group: 'input_buttons'
                    id: usbc
                    text: 'USB-C'
                    state: 'down' if app.input.input == 2 else 'normal'
                    on_state: app.input.set_usbc() if (self.state == "down") else print()
                InputButton:
                    group: 'input_buttons'               
                    id: hdmi
                    text: 'HDMI'
                    state: 'down' if app.input.input == 1 else 'normal'
                    on_state: app.input.set_hdmi() if (self.state == "down") else print()
                InputButton:
                    group: 'input_buttons'               
                    id: vga
                    text: 'VGA'
                    state: 'down' if app.input.input == 3 else 'normal'
                    on_state: app.input.set_vga() if (self.state == "down") else print()
        BlankSpace:
            size_hint: 25, 1
        ImageButtons:
            padding: [10]
            size_hint: 20, 1
            spacing: 5
            orientation: 'vertical'
            LaterUseBlank:
                size_hint: 1, 15
            BlankButton:
                id: blank
                size_hint: 1, 42.5
                text: 'Blank'
                state: 'down' if app.image.blanked else 'normal'
                on_state: app.controller.turn_on_blank() if (self.state == "down") else app.controller.turn_off_blank()
            FreezeButton:
                id: freeze
                size_hint: 1, 42.5
                text: 'Freeze'
                state: 'down' if app.image.frozen else 'normal'
                on_state: app.controller.turn_on_freeze() if (self.state == "down") else app.controller.turn_off_freeze()
        SoundControls:
            size_hint: 10, 1
            orientation: 'vertical'
            VolumeLabel:
                background_color: [0/255, 0/255, 0/255, 0]
                color: [1, 1, 1, 1]
                # disabled: 'True'
                halign: 'center'
                markup: True
                outline_width: 2
                outline_color: [0, 0, 0, 1]
                size_hint: 1, 10
                text: f"[size=20]Volume\n{str(int(volume.value))}[/size]"
            VolumeSlider:
                cursor_image: './images/w-logo.png'
                cursor_width: '48sp'
                id: volume
                min: 0
                max: 100
                orientation: 'vertical'
                step: 1
                size_hint: 1, 75
                text: 'Volume'
                value: app.sound.volume
                on_value: app.sound.set_volume(int(self.value))
            MuteButton:
                id: mute
                size_hint: 1, 15
                # sound: app.sound
                state: 'down' if app.sound.mute else 'normal'
                text: 'Mute'
                on_state: app.sound.set_mute() if (self.state == 'down') else app.sound.unset_mute()