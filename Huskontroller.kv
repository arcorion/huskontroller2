#:import Factor kivy.factory.Factory
<Popup>:
	auto_dismiss: False
	background_color: 50/255, 0, 110/255, 1
	background: ''
	size_hint: 0.9, 0.9
	title: 'Projector Turning On'
	title_align: 'center'
	title_color: 1, 1, 1, 0.9
	title_font: './fonts/open_sans/open_sans_regular.ttf'
	title_size: '36sp'

<Interface>:
	orientation: 'horizontal'
	padding: [5, 5, 5, 5]
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
			source: './images/pidubs-normal.png'

	GridLayout:
		cols: 2
		rows: 2
		PowerToggle:
			background_color_down: 51/255, 0/255, 111/255, 0.9
			background_color_normal: 51/255, 0/255, 111/255, 0.3
			background_color: 51/255, 0/255, 111/255, 0.3
			background_normal: ''
			color: 25/255, 25/255, 25/255, 1
			color_down: 250/255, 250/255, 250/255, 1
			color_normal: 25/255, 25/255, 25/255, 1
			font_name: './fonts/open_sans/open_sans_regular.ttf'
			font_size: 24
			size_hint: (1, 0.15)
			text: 'Turn Projector On'

		Label:
			size_hint: (1, 0.15)

		InputPanel:
			cols: 2
			padding: [10, 10, 10, 10]
			pos_hint: {'x': 0, 'y': 73}
			spacing: 5
			InputToggle:
				allow_no_selection: False
				background_color_down: 0, 90/255, 45/255, 0.9
				background_color_normal: 0, 90/255, 45/255, 0.3
				background_color: 0, 90/255, 45/255, 0.3
				color_normal: 25/255, 25/255, 25/255, 1
				group: 'input'
				output: 'podium'
				text: 'Podium PC'
			InputToggle:
				allow_no_selection: False
				background_color_down: 210/255, 210/255, 10/255, 0.9
				background_color_normal: 210/255, 210/255, 10/255, 0.3
				background_color: 210/255, 210/255, 10/255, 0.3
				color_normal: 25/255, 25/255, 25/255, 1
				group: 'input'
				output: 'hdmi'
				text: 'HDMI'
			InputToggle:
				allow_no_selection: False
				background_color_down: 200/255, 30/255, 30/255, 0.9
				background_color_normal: 200/255, 30/255, 30/255, 0.3
				background_color: 200/255, 30/255, 30/255, 0.3
				color_normal: 25/255, 25/255, 25/255, 1
				group: 'input'
				output: 'usb-c'
				text: 'USB-C'
			InputToggle:
				allow_no_selection: False
				background_color_down: 0, 25/255, 150/255, 0.9
				background_color_normal: 0, 10/255, 150/255, 0.3
				background_color: 0, 10/255, 150/255, 0.3
				color_normal: 25/255, 25/255, 25/255, 1
				group: 'input'
				output: 'vga'
				text: 'VGA'
		
		BoxLayout:
			orientation: 'horizontal'
			Label:
			DisplayStatePanel:
				orientation: 'vertical'
				padding: 10
				spacing: 5
				BlankToggle:
					background_color_down: 51/255, 0/255, 111/255, 0.9
					background_color_normal: 51/255, 0/255, 111/255, 0.3
					background_color: 51/255, 0/255, 111/255, 0.3
					background_normal: ''
					color: 25/255, 25/255, 25/255, 1
					color_down: 250/255, 250/255, 250/255, 1
					color_normal: 25/255, 25/255, 25/255, 1
					font_name: './fonts/open_sans/open_sans_regular.ttf'
					font_size: 24
					group: "display_state"
					text: 'Blank'
				FreezeToggle:
					background_color_down: 51/255, 0/255, 111/255, 0.9
					background_color_normal: 51/255, 0/255, 111/255, 0.3
					background_color: 51/255, 0/255, 111/255, 0.3
					background_normal: ''
					color: 25/255, 25/255, 25/255, 1
					color_down: 250/255, 250/255, 250/255, 1
					color_normal: 25/255, 25/255, 25/255, 1
					font_name: './fonts/open_sans/open_sans_regular.ttf'
					font_size: 24
					group: "display_state"
					text: 'Freeze'
	BoxLayout:
		size_hint: (0.1, 1)
		orientation: 'vertical'
		Label:
			color: 51/255, 0, 111/255, 1
			font_name: './fonts/open_sans/open_sans_regular.ttf'
			halign: 'center'
			size_hint: (1, 0.1)
			text: 'Volume\n' + str(int(volume_slider.value))
		VolumeSlider:
			cursor_image: './images/w-logo.png'
			cursor_width: '48sp'
			id: volume_slider
			min: 0
			max: 100
			orientation: 'vertical'
			step: 1
			value: 50
		MuteButton:
			background_color_down: 51/255, 0/255, 111/255, 0.9
			background_color_normal: 51/255, 0/255, 111/255, 0.3
			background_color: 51/255, 0/255, 111/255, 0.3
			background_normal: ''
			color: 25/255, 25/255, 25/255, 1
			color_down: 250/255, 250/255, 250/255, 1
			color_normal: 25/255, 25/255, 25/255, 1
			font_name: './fonts/open_sans/open_sans_regular.ttf'
			font_size: 18
			size_hint: (1, 0.15)
			text: 'Mute'

# Defines ToggleButton widgets with a common set of defaults
<ToggleButton>:
	background_normal: ''
	background_down: ''
	font_name: './fonts/open_sans/open_sans_regular.ttf'
	font_size: 24
	color: 25/255, 25/255, 25/255, 1
	color_down: 250/255, 250/255, 250/255, 1